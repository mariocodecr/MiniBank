{
  "dashboard": {
    "id": null,
    "title": "MiniBank FX & Treasury Dashboard",
    "tags": ["minibank", "fx", "treasury", "risk"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 37,
    "version": 1,
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "panels": [
      {
        "id": 1,
        "title": "FX Rate Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(fx_rate_cache_hits_total[5m]) / (rate(fx_rate_cache_hits_total[5m]) + rate(fx_rate_cache_misses_total[5m])) * 100",
            "legendFormat": "Cache Hit Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "FX Rate Retrieval Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(fx_rate_retrieval_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(fx_rate_retrieval_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {
            "unit": "s",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Provider Fallbacks",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(fx_rate_provider_fallbacks_total[5m])",
            "legendFormat": "Fallbacks/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            },
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Cross-Currency Payment Volume",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (source_currency, destination_currency) (rate(cross_currency_payments_total[5m]))",
            "legendFormat": "{{source_currency}} -> {{destination_currency}}"
          }
        ],
        "yAxes": [
          {
            "unit": "reqps",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Payment Success Rate by Currency",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum by (source_currency, destination_currency) (rate(cross_currency_payments_success_total[5m])) / sum by (source_currency, destination_currency) (rate(cross_currency_payments_total[5m])) * 100"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Currency Exposures",
        "type": "graph",
        "targets": [
          {
            "expr": "treasury_exposure_net",
            "legendFormat": "{{currency}} Net Exposure"
          }
        ],
        "yAxes": [
          {
            "unit": "currencyUSD",
            "min": null
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Treasury Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "treasury_alerts_generated_total",
            "format": "table",
            "legendFormat": ""
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "currency": "Currency",
                "alert_type": "Alert Type",
                "severity": "Severity",
                "Value": "Count"
              }
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "FX Spread Revenue",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(fx_spread_revenue_total[24h]))",
            "legendFormat": "24h Revenue"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "currencyUSD"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 9,
        "title": "AML Screening Status",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (status) (compliance_aml_screenings_total)",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 24
        }
      },
      {
        "id": 10,
        "title": "High Risk Transactions",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(compliance_aml_screenings_review_required[5m]))",
            "legendFormat": "Requiring Review"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 11,
        "title": "FX Provider Status",
        "type": "table",
        "targets": [
          {
            "expr": "fx_provider_status",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "provider": "Provider",
                "status": "Status",
                "last_update": "Last Update",
                "Value": "Active"
              }
            }
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 24
        }
      },
      {
        "id": 12,
        "title": "Payment Saga Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(payment_saga_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile - Total Saga Duration"
          },
          {
            "expr": "histogram_quantile(0.95, rate(fx_conversion_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile - FX Conversion Step"
          }
        ],
        "yAxes": [
          {
            "unit": "s",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 13,
        "title": "Currency Volatility",
        "type": "graph",
        "targets": [
          {
            "expr": "fx_rate_volatility_percentage",
            "legendFormat": "{{currency_pair}} Volatility %"
          }
        ],
        "yAxes": [
          {
            "unit": "percent",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        }
      },
      {
        "id": 14,
        "title": "Liquidity Levels",
        "type": "graph",
        "targets": [
          {
            "expr": "treasury_liquidity_ratio",
            "legendFormat": "{{currency}} Liquidity Ratio"
          }
        ],
        "yAxes": [
          {
            "unit": "percentunit",
            "min": 0,
            "max": 2
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.2],
                "type": "lt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "last"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "10s",
          "handler": 1,
          "name": "Low Liquidity Alert",
          "noDataState": "no_data",
          "notifications": []
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 40
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    },
    "editable": true,
    "gnetId": null,
    "graphTooltip": 0,
    "links": [],
    "liveNow": false,
    "panels": [],
    "templating": {
      "list": [
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "datasource": "prometheus",
          "definition": "label_values(fx_rates, currency)",
          "hide": 0,
          "includeAll": true,
          "label": "Currency",
          "multi": true,
          "name": "currency",
          "options": [],
          "query": "label_values(fx_rates, currency)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 1,
          "tagValuesQuery": "",
          "tagsQuery": "",
          "type": "query",
          "useTags": false
        },
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "datasource": "prometheus",
          "definition": "label_values(fx_provider_status, provider)",
          "hide": 0,
          "includeAll": true,
          "label": "FX Provider",
          "multi": true,
          "name": "provider",
          "options": [],
          "query": "label_values(fx_provider_status, provider)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 1,
          "type": "query",
          "useTags": false
        }
      ]
    }
  },
  "folderTitle": "MiniBank",
  "overwrite": true
}