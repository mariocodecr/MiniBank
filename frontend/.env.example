# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_API_VERSION=v1

# Authentication - REQUIRED
NEXTAUTH_URL=http://localhost:3000
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here-minimum-32-characters

# Keycloak OIDC Configuration - REQUIRED
NEXT_PUBLIC_KEYCLOAK_ISSUER=http://localhost:8082/realms/minibank
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=minibank-web
# Keep this secure - never commit actual secrets
# WARNING: This secret is visible in client-side code. Use Keycloak public client or
# configure proper client authentication in production
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# Development Environment
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Optional: MSW (Mock Service Worker) for development
NEXT_PUBLIC_MSW_ENABLED=false

# Security Configuration
# Enable only in development
NEXT_PUBLIC_DEBUG_API=false
NEXT_PUBLIC_DEBUG_AUTH=false

# Session Security
# Session duration in seconds (24 hours)
NEXTAUTH_SESSION_MAX_AGE=86400
# Secure cookies in production
NEXTAUTH_COOKIE_SECURE=true

# Web Vitals & Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_PERFORMANCE_MONITORING=true